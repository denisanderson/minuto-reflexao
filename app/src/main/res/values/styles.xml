<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primaryDark</item>
    </style>

    <style name="estilo_titulo">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:padding">@dimen/padding_titulo</item>
        <item name="android:textSize">@dimen/size_titulo</item>
        <item name="android:textColor">@color/color_textDarkSecondary</item>

    </style>

    <style name="estilo_texto">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:padding">@dimen/padding_texto</item>
        <item name="android:textSize">@dimen/size_texto</item>
        <item name="android:textColor">@color/color_textDarkSecondary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="estilo_autor">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:padding">@dimen/padding_texto</item>
        <item name="android:textSize">@dimen/size_texto</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/color_textDarkSecondary</item>
    </style>

    <style name="estilo_fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <!-- Atributo para dar o efeito de botÃ£o pressionado -->
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>
